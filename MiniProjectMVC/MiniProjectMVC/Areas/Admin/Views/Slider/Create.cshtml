@model SliderCreateVM
@{
    ViewData["Title"] = "Create";
}

<div class="card">
    <div class="card-body">
        <form class="forms-sample" method="post" asp-area="Admin" asp-action="Create" enctype="multipart/form-data">
            <div class="form-group">
                <label for="inputBlogTitle">Slider Title</label>
                <input asp-for="Title" class="form-control" id="inputBlogTitle" placeholder="Title.." maxlength="100">
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="inputBlogDescription">Category Description</label>
                <textarea asp-for="Description" class="form-control" id="inputBlogDescription" placeholder="Description.." rows="8"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="image mb-5">
                <img src="~/assets/images/@Model.Images" style="width:100px;height:100px" alt="" />
            </div>
            <div class="form-group">
                <label for="inputCategoryName">Upload new image</label>
                <input asp-for="Images" accept="image/*" class="form-control" id="inputSliderTitle">
                <span asp-validation-for="Images" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-gradient-primary me-2">Submit</button>
            <a class="btn btn-light" asp-action="Index">Cancel</a>
        </form>
    </div>
</div>

